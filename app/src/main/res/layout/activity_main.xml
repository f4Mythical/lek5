<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00796B"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Galeria"
        android:textSize="32sp"
        android:textStyle="bold"
        android:background="#004C40"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:gravity="left|center_vertical" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:srcCompat="@drawable/kot1"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:contentDescription="cat_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/buttonPrev"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:backgroundTint="#004C40"
            android:text="PREV"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginEnd="6dp" />

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:backgroundTint="#004C40"
            android:text="NEXT"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginStart="6dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="14dp"
        android:paddingTop="4dp"
        android:paddingEnd="14dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textLabelImageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Który obraz wyświetlić?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginEnd="12dp" />

        <EditText
            android:id="@+id/editImageNumber"
            android:layout_width="64dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:maxLines="1"
            android:padding="0dp"
            android:layout_gravity="center_vertical"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            />

        <View
            android:layout_width="64dp"
            android:layout_height="2dp"
            android:layout_gravity="bottom"
            android:background="#FF000000"
            android:layout_marginStart="-64dp"
            android:layout_marginTop="38dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:paddingTop="2dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/textBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tło niebieskie?"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginEnd="12dp" />

        <Switch
            android:id="@+id/switchBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/autorId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autor: "
        android:textColor="#FFFFFF"
        android:background="#004C40"
        android:textSize="15sp"
        android:padding="10dp"/>
</LinearLayout>